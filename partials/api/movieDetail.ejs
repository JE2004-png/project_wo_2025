<%- include('partials/navbar') %>
<link rel="stylesheet" href="/styles.css">
<div class="container">
  <h1><%= movie.title %></h1>
  <img src="<%= movie.image %>" alt="<%= movie.title %>" width="200" />
  <ul>
    <li><strong>Beschrijving:</strong> <%= movie.description %></li>
    <li><strong>Releasejaar:</strong> <%= movie.year %></li>
    <li><strong>Genre:</strong> <%= movie.genre %></li>
    <li><strong>Beoordeling:</strong> <%= movie.rating %>/10</li>
    <li><strong>Actief:</strong> <%= movie.active ? 'Ja' : 'Nee' %></li>
  </ul>
